<div class="dashboard-container">
  <!-- Notes Section -->
  <div class="section">
    <h2 class="section-title">Notes</h2>
    <ul class="card-list">
      <% notes.forEach((value, key) => { %>
      <li class="cursor-pointer card notes-card" onclick="logaId('<%= key %>')">
        <%= key %>
      </li>
      <% }) %>
    </ul>
  </div>

  <!-- To-Do List Section -->
  <div class="section">
    <h2 class="section-title">To-Do List</h2>
    <ul class="card-list">
      <% data.forEach((value, key) => { %>
      <li class="cursor-pointer card todo-card" onclick="logId('<%= key %>')">
        <%= key %>
      </li>
      <% }) %>
    </ul>
  </div>
</div>

<script>
  function logId(name) {
    window.location.href = `/dolist/${name}`;
  }

  function logaId(name) {
    window.location.href = `/notes/${name}`;
  }
</script>

<style>
  /* Dashboard Container */
  .dashboard-container {
    display: flex;
    flex-direction: column;
    gap: 30px;
    padding: 40px;
    background-color: #f4f7fa;
    min-height: calc(100vh - 60px); /* Adjust for navbar */
  }

  /* Section Style */
  .section {
    padding: 40px;
    background-color: #fff;
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
  }

  .section-title {
    font-size: 2rem;
    font-family: 'Poppins', sans-serif;
    text-align: center;
    color: #234b5e; /* Matches the navbar */
    margin-bottom: 30px;
  }

  /* Card List */
  .card-list {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 25px;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Card Style */
  .card {
    padding: 20px;
    border-radius: 12px;
    font-size: 1.2rem;
    text-align: center;
    background-color: #ffffff;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
    color: white;
    font-family: 'Roboto', sans-serif;
    letter-spacing: 0.5px;
  }

  /* Hover Effect for Cards */
  .card:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
  }

  /* Notes Card */
  .notes-card {
    background-color: #4db6ac; /* Teal tone */
  }

  /* To-Do Card */
  .todo-card {
    background-color: #ff8a65; /* Coral tone */
  }

  /* Media Queries */
  @media (max-width: 1024px) {
    .card-list {
      grid-template-columns: repeat(2, 1fr);
    }

    .card {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 768px) {
    .card-list {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .card {
      padding: 15px;
      font-size: 1rem;
    }
  }
</style>
