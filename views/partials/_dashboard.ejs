<style>
  .dashboard-container {
    display: flex;
    flex-direction: column; /* Stack sections vertically */
    height: auto; /* Adjust height for vertical stacking */
  }

  .section {
    width: 100%;
    padding: 40px 20px; /* Adjust padding for spacing */
    border-bottom: 1px solid black; /* Add border between sections */
  }

  .section:last-child {
    border-bottom: none; /* Remove bottom border for the last section */
  }

  .section-title {
    text-align: center;
    margin-bottom: 20px;
  }

  .card-list {
    list-style-type: none;
    padding: 0;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* Default to 4 cards per row */
    gap: 15px;
    max-width: 800px; /* Limit width for better appearance */
  }

  .card {
    padding: 10px 20px;
    border-radius: 10px;
    text-align: center;
    box-sizing: border-box;
  }

  /* Media query for smaller screens */
  @media (max-width: 768px) {
    .card-list {
      grid-template-columns: repeat(2, 1fr); /* Display 2 cards per row on small screens */
    }

    .card {
      padding: 10px;
      font-size: 14px; /* Adjust font size for small screens */
    }
  }
</style>

<div class="dashboard-container">
  <!-- Notes Section -->
  <div class="flex flex-col section">
    <text class="text-2xl font-bold section-title" style="color: #005e32;">Notes</text>
    <div>
      <ul class="card-list">
        <% notes.forEach((value, key) => { %>
        <li
          class="cursor-pointer card"
          style="
            background-color: #005e32;
            color: white;
            border: 1px solid black;
          "
          onclick="logaId('<%= key %>')"
        >
          <%= key %>
        </li>
        <% }) %>
      </ul>
    </div>
  </div>

  <!-- To-Do List Section -->
  <div class="flex flex-col section">
    <text class="text-2xl font-bold section-title" style="color: #644e11;">To-Do List</text>
    <div>
      <ul class="card-list">
        <% data.forEach((value, key) => { %>
        <li
          class="cursor-pointer card"
          style="
            background-color: #644e11;
            color: white;
            border: 1px solid black;
          "
          onclick="logId('<%= key %>')"
        >
          <%= key %>
        </li>
        <% }) %>
      </ul>
    </div>
  </div>
</div>

<script>
  function logId(name) {
    window.location.href = `/dolist/${name}`;
  }
  function logaId(name) {
    window.location.href = `/notes/${name}`;
  }
</script>
